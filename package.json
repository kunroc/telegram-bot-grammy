{
  "name": "telegram-bot",
  "version": "1.0.0",
  "description": "A Telegram bot built with Grammy framework and TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run build && node dist/index.js",
    "start:prod": "cross-env NODE_ENV=production npm run build && node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "clean": "rimraf dist"
  },
  "keywords": [
    "telegram",
    "bot",
    "grammy",
    "typescript",
    "nodejs"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.4.7",
    "grammy": "^1.32.0",
    "https-proxy-agent": "^7.0.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.9",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}